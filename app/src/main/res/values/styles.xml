<resources xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="MealTitle" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MealPriceValue" parent="@android:style/TextAppearance.Material.Large">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MealPriceTitle" parent="@android:style/TextAppearance.Material.Medium">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="NoteTitle" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="NotesValue" parent="@android:style/TextAppearance.Material.Small">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
